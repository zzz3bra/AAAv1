@model AAAv1.Models.FilteredCars

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <title>CarForm</title>
</head>
<body>
    <style>
        Body {
            background-color: azure;
        }
    </style>


    <center>
        @using (Html.BeginForm())
        {
            <table align="center" width="1000px" border="0" cellspacing="1">
                <tr>
                    <td align="left" width="333px" height="40px">
                        <a href="Index.cshtml">На главную</a>
                    </td>
                    <td align="center" width="333px" height="40px">
                        <h1><font face="Arial">Поиск авто</font></h1>
                    </td>
                    <td align="right" width="333px" height="40px">
                        <p>Логин</p>
                        <p>Пароль</p>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" align="center" width="1000px" height="275px" background="\Content\Images\7series-2015-a.jpg"></td>
                </tr>
                <tr>
                    <td align="center" width="260px" height="300px" bgcolor="white">

                        @Html.ValidationSummary()
                        <h2><font face="Arial">Выберите параметры желаемого авто:</font></h2>
                        <p align="center">Марка: @Html.DropDownListFor(x => x.SelectedCarManufacturerID, Model.CarManufacturers, new { style = "width:176px;" })</p></p>
                        <p align="center">Модель: @Html.TextBoxFor(x => x.CarModel, new { style = "width:176px;" })</p>
                        <p align="center">Цена от @Html.TextBoxFor(x => x.CarPriceLow, new { style = "width:59px;" }) до @Html.TextBoxFor(x => x.CarPriceHigh, new { style = "width:59px;" })</p>
                        <p align="center">Год от @Html.TextBoxFor(x => x.CarYearLow, new { style = "width:59px;" }) до @Html.TextBoxFor(x => x.CarYearHigh, new { style = "width:59px;" }) </p>
                        <input style="width:176px;" type="submit" value="Искать" />
                    </td>
                    <td align="center" width="370px" height="300px" bgcolor="white">главная лента вип-объявлений</td>
                    <td align="center" width="370px" height="300px" bgcolor="white">заметки пользователя</td>
                </tr>
            </table>
        }
    </center>
</body>
</html>
